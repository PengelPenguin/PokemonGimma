@model PokemonGame.Pokemon.Pokemon

@{
    ViewData["Title"] = Model.Name + "'s Training!";
    string imageSrc = "https://pokeres.bastionbot.org/images/pokemon/" + Model.Id + ".png";
    string randomImageSrc = "https://pokeres.bastionbot.org/images/pokemon/" + Model.EnemyPokemon.Id + ".png";
}

<div class="container">
    <div class="row">
        <div class="col-lg-6">
            <p>@Model.Name</p>
            <img srcset=@imageSrc />
            @for (int i = 0; i < 3; i++)
            {
                <button> @Model.Moves[i].MoveMove.Name</button>
            }
        </div>
        <div class="col-lg-6">
            <p>@Model.EnemyPokemon.Name</p>
            <img srcset=@randomImageSrc />
            @for (int i = 0; i < 3; i++)
            {
                <button> @Model.EnemyPokemon.Moves[i].MoveMove.Name</button>
            }
        </div>
    </div>
</div>

